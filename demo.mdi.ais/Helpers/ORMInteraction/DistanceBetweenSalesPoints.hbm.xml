<?xml version="1.0" encoding="utf-8" ?>
<hibernate-mapping xmlns="urn:nhibernate-mapping-2.2" auto-import="true" assembly="demo.mdi.ais" namespace="demo.mdi.ais.Helpers.ORMInteraction">
  <class name="DistanceBetweenSalesPoints" table="[Расстояния между торговыми точками]" dynamic-update="true" >
    <cache usage="read-write"/>
    <composite-id>
      <key-property column="[№ начальной ТТ]" type="int" name="StartSalesPointNumber" />
      <key-property column="[№ конечной ТТ]" type = "int" name = "EndSalesPointNumber" />
    </composite-id>
    <property column="[№ района]" type = "int" name = "DistrictNumber" />
    <property column="[Расстояние между ТТ]" type = "int" name = "Distance" />
    <property column="[Информация о пути]" type = "string" name = "InformationAboutPath" />
    
    <many-to-one name="StartSalesPoint" class="SalesPoint" column="[№ начальной ТТ]" cascade = "save-update" />
    <many-to-one name="EndSalesPoint" class="SalesPoint" column="[№ конечной ТТ]" cascade = "save-update" />
    <many-to-one name="District" class="District" column="[№ Района]" cascade = "save-update" />
  </class>
</hibernate-mapping>