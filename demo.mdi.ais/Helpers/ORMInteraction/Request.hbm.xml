<?xml version="1.0" encoding="utf-8" ?>
<hibernate-mapping xmlns="urn:nhibernate-mapping-2.2" auto-import="true" assembly="demo.mdi.ais" namespace="demo.mdi.ais.Helpers.ORMInteraction">
  <class name="Request" table="[Заявки]" dynamic-update="true" >
    <cache usage="read-write"/>
    
    <composite-id>
      <key-property column="[№ Заявки]" type="int" name="RequestNumber" />
      <key-property column="[№ ТТ]" type="int" name="SalesPointNumber" />
      <key-property column="[№ Товара]" type="int" name="ShipmentNumber" />
      <key-property column="[Граничная дата доставки]" type="datetime" name="BorderDeliveryDate" />
    </composite-id>
    <property column="[Количество]" type = "int" name = "Count" />
    <property column="[Статус заявки]" type = "string" name = "RequestStatus" />
    
    <many-to-one name="Goods" class="Goods" column="[№ Товара]" cascade = "save-update" />
    <many-to-one name="SalesPoint" class="SalesPoint" column="[№ ТТ]" cascade = "save-update" />
    <!--<set name ="RequestVolumes" lazy="true">
      <key column ="[№ Заявки]"/>
      <one-to-many class ="Request"/>
    </set>-->
    </class>
</hibernate-mapping>